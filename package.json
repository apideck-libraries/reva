{
  "name": "@apideck/reva",
  "author": "Elias Meire",
  "module": "dist/reva.esm.js",
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "openapi",
    "validator",
    "jsonschema"
  ],
  "repository": "https://github.com/apideck-libraries/reva",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "release": "np --no-publish && npm publish --access public --registry https://registry.npmjs.org",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "@apideck/better-ajv-errors": "^0.3.6",
    "ajv": "^8.12.0",
    "openapi-types": "^12.1.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/node": "^18.11.18",
    "husky": "^8.0.3",
    "np": "^7.6.3",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/reva.cjs.production.min.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/reva.esm.js",
      "limit": "50 KB"
    }
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "resolutions": {
    "prettier": "^2.3.0"
  }
}
